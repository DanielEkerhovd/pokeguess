{
  "name": "pokeguess",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "start": "live-server --port=8080",
    "lint": "eslint ./src/js/**/*.{mjs,js}",
    "format": "prettier --write ./src/js/**/*.{mjs,js}",
    "lint-fix": "eslint ./src/js/**/*.{mjs,js} --cache --fix",
    "test": "",
    "build": "tailwindcss -i src/styles.css -o dist/styles.css",
    "watch": "tailwindcss -i src/styles.css -o dist/styles.css --watch",
    "dev": "npm-run-all --parallel start build watch",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "live-server": "^1.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "eslint": "^9.11.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.4"
  },
  "lint-staged": {
    "*.{js,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "prettier --write"
    ]
  }
